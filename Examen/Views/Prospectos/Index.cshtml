
@model IEnumerable<Examen.Models.Prospecto>
@{
    ViewData["Title"] = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>Listado de Prospectos</h3>
    </div>

    <div class="row">
        @if(Model.Count() > 0 )
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.nombre) </td>
                        <td>@Html.DisplayNameFor(m => m.apellidoP) </td>
                        <td>@Html.DisplayNameFor(m => m.apellidoM) </td>
                        <td>@Html.DisplayNameFor(m => m.estatus) </td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td>@item.nombre </td>
                        <td>@item.apellidoP </td>
                        <td>@item.apellidoM
                        <td>@item.estatus </td>
                        <td>
                            <a asp-controller="Prospectos" asp-action="Info" asp-route-id="@item.Id" class="btn btn-info">Informaci&oacute;n </a>
                            <a asp-controller="Prospectos" asp-action="Evaluar" asp-route-id="@item.Id" class="btn btn-warning">Evaluar </a>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
          <span>No existen registros</span>
        }
    </div>
</div>

