
@model  Examen.Models.Prospecto
@{
    ViewData["Title"] = "Nuevo Prospecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Nueva Captura</h3>

<div class="container">

    <div class="row">
        <form method="post" asp-action="Captura">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-sm-4">
                    <label class="control-label">Nombre:</label>
                    <input asp-for="nombre" class="form-control">
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="col-sm-4">
                    <label class="control-label">Primer Paterno:</label>
                    <input asp-for="apellidoP" class="form-control">
                    <span asp-validation-for="apellidoP" class="text-danger"></span>
                </div>

                <div class="col-sm-4">
                    <label class="control-label">Segundo Paterno:</label>
                    <input asp-for="apellidoM" class="form-control">

                </div>
            </div>
            <div class="row mb-3">
                <div class="col-9">
                    <label class="control-label">Calle:</label>
                    <input asp-for="calle" class="form-control">
                    <span asp-validation-for="calle" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label">N&uacute;mero:</label>
                    <input asp-for="numero" class="form-control">
                    <span asp-validation-for="numero" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-9">
                    <label class="control-label">Colonia:</label>
                    <input asp-for="colonia" class="form-control">
                    <span asp-validation-for="colonia" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label">C&oacute;digo Postal:</label>
                    <input asp-for="codigoPostal" class="form-control">
                    <span asp-validation-for="codigoPostal" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-4">
                    <label class="control-label">Telefono:</label>
                    <input asp-for="telefono" class="form-control">
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
                <div class="col-8">
                    <label class="control-label">RFC:</label>
                    <input asp-for="rfc" class="form-control">
                    <span asp-validation-for="rfc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group float-right">
                <input type="submit" value="Capturar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Index">Salir</a>
            </div>

        </form>
    </div>
</div>


@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/>}
}